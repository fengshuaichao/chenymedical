 @import "../common/common.wxss";
.weui-agree__link {
  display: inline;
  color: var(--weui-LINK);
}

.weui-flex {
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center
}

.weui-cells {
  margin-top: 0;
  opacity: 0;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  -webkit-transition: .3s;
  transition: .3s
}

.weui-cells:after,
.weui-cells:before {
  display: none
}

.weui-cells_show {
  opacity: 1;
  -webkit-transform: translateY(0);
  transform: translateY(0)
}

.weui-cell:before {
  right: 15px
}

.kind-list__item {
  margin: 10px 0;
  background-color: var(--weui-BG-2);
  border-radius: 2px;
  overflow: hidden
}

.kind-list__item:first-child {
  margin-top: 0
}

.kind-list__img {
  width: 30px;
  height: 30px
}

[data-weui-theme=dark] .kind-list__img {
  -webkit-filter: invert(100) hue-rotate(180deg);
  filter: invert(100) hue-rotate(180deg)
}

.kind-list__item-hd {
  padding: 20px;
  -webkit-transition: opacity .3s;
  transition: opacity .3s
}

.kind-list__item-hd_show {
  opacity: .4
}

.kind-list__item-bd {
  height: 0;
  overflow: hidden
}

.kind-list__item-bd_show {
  height: auto
}

.usercenter-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 用户信息卡片样式 */
.user-card {
  background: linear-gradient(135deg, #2B7FE1, #1E5BB0);
  padding: 40rpx 30rpx;
  color: #fff;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.info-content {
  margin-left: 20rpx;
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.member-id {
  font-size: 26rpx;
  opacity: 0.9;
}

.login-tip {
  font-size: 32rpx;
}

.member-level {
  display: flex;
  align-items: center;
}

.member-level image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.member-level text {
  font-size: 26rpx;
}

/* 会员权益样式 */
.benefits-section {
  display: flex;
  background: #fff;
  padding: 30rpx 0;
  margin-bottom: 20rpx;
}

.benefit-item {
  flex: 1;
  text-align: center;
  position: relative;
}

.benefit-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 20%;
  bottom: 20%;
  width: 1rpx;
  background: #eee;
}

.number {
  font-size: 36rpx;
  color: #2B7FE1;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.label {
  font-size: 26rpx;
  color: #666;
}

/* 快捷入口样式 */
.quick-access {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.grid-list {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30rpx;
}

.grid-item {
  text-align: center;
}

.grid-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
  display: block;
  margin: 0rpx auto;
}

.grid-item text {
  font-size: 26rpx;
  color: #333;
  line-height: 60rpx;
  height: 60rpx;
  display: block;
}

/* 功能列表样式 */
.function-list {
  background: #fff;
}

.function-group {
  margin-bottom: 20rpx;
}

.group-title {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #999;
  background: #f5f5f5;
}

.function-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #f5f5f5;
}

.item-left {
  display: flex;
  align-items: center;
}

.item-left image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.item-left text {
  font-size: 28rpx;
  color: #333;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
}

/* 退出登录按钮样式 */
.logout-btn {
  margin: 40rpx 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #fff;
  border-radius: 44rpx;
  color: #FF4D4F;
  font-size: 30rpx;
} 