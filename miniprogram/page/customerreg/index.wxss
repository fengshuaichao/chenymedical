.customerreg-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

.header {
  background: linear-gradient(to right, #00C6FF, #0072FF);
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

.header .icon {
  width: 200rpx;
  height: 200rpx;
}

.form {
  background: #fff;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.form-item .label {
  width: 180rpx;
  color: #333;
  font-size: 28rpx;
}

.form-item .required::before {
  content: '*';
  color: #f00;
  margin-right: 4rpx;
}

.form-item input,
.form-item .value {
  flex: 1;
  font-size: 28rpx;
}

.arrow {
  position: relative;
}

.arrow::after {
  content: '';
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #999;
  border-right: 4rpx solid #999;
  transform: rotate(45deg);
  position: absolute;
  right: 30rpx;
  top: 50%;
  margin-top: -8rpx;
}

.submit-btn {
  margin: 60rpx 30rpx;
}

.submit-btn button {
  background: #ff6634;
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
} 


.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 100;
}

.popup-content {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  transform: translateY(100%);
  transition: transform 0.3s;
  z-index: 101;
}

.popup-show {
  transform: translateY(0);
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.popup-header .title {
  font-size: 32rpx;
  color: #333;
}

.popup-header .cancel,
.popup-header .confirm {
  font-size: 28rpx;
  color: #666;
}

.popup-header .confirm {
  color: #ff6634;
}

.picker-view {
  height: 400rpx;
  text-align: center;
}

.picker-item {
  line-height: 80rpx;
  font-size: 32rpx;
}

.clinic-list {
  max-height: 600rpx;
}

.clinic-item {
  padding: 30rpx;
  font-size: 32rpx;
  border-bottom: 1rpx solid #eee;
}

.clinic-item.selected {
  color: #ff6634;
} 



.gender-list {
  max-height: 400rpx;
}

.gender-item {
  padding: 30rpx;
  font-size: 32rpx;
  border-bottom: 1rpx solid #eee;
}

.gender-item.selected {
  color: #ff6634;
} 