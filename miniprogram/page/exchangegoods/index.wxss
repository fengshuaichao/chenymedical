

.exgoods-container {
  background-color: #fff;
}

/* 轮播图样式 */
.service-swiper {
  width: 100%;
  height: 750rpx;
}

.service-swiper image {
  width: 100%;
  height: 100%;
}

/* 商品信息样式 */
.service-info {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.price-section {
  display: flex;
  align-items: baseline;
  margin-bottom: 20rpx;
}

.price {
  font-size: 48rpx;
  color: #FF4D4F;
  font-weight: bold;
}

.original-price {
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 20rpx;
}

.sold {
  font-size: 24rpx;
  color: #999;
  margin-left: auto;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.tags {
  display: flex;
  flex-wrap: wrap;
}

.tags text {
  padding: 4rpx 16rpx;
  background: #F5F5F5;
  color: #666;
  font-size: 24rpx;
  border-radius: 4rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}

/* 规格选择样式 */
.spec-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.spec-list {
  display: flex;
  flex-wrap: wrap;
}

.spec-item {
  width: calc(50% - 20rpx);
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border: 1rpx solid #EEEEEE;
  border-radius: 8rpx;
  margin: 10rpx;
  font-size: 28rpx;
  position: relative;
}

.spec-item.selected {
  border-color: #2B7FE1;
  color: #2B7FE1;
  background: rgba(43, 127, 225, 0.05);
}

.spec-price {
  color: #FF4D4F;
  margin-left: 10rpx;
}