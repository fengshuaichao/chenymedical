<!-- pages/integral/integral.wxml -->
<view class="container">
  <!-- 标题 -->
  <view class="header">
    <text class="title">我的积分</text>
  </view>

  <!-- 用户信息栏 -->
  <view class="user-section">
    <view class="account-info">
      <text class="account-text">微信账户 用户6154</text>
    </view>
    <view class="switch-btn">
      <text class="switch-text">切换</text>
    </view>
  </view>

  <!-- 分类选项卡 -->
  <view class="tabs">
    <view class="tab-item {{activeTab === 0 ? 'active' : ''}}" data-index="0" bindtap="switchTab">全部</view>
    <view class="tab-item {{activeTab === 1 ? 'active' : ''}}" data-index="1" bindtap="switchTab">收入</view>
    <view class="tab-item {{activeTab === 2 ? 'active' : ''}}" data-index="2" bindtap="switchTab">支出</view>
  </view>

  <!-- 内容区域 -->
  <view class="content">
    <view class="empty-state">
      <text class="empty-text">暂无数据</text>
    </view>
  </view>
</view>