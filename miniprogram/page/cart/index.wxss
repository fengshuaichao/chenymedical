/* page/cart/index.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 空购物车样式 */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}

.empty-cart image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-cart text {
  color: #999;
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

.go-shopping {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #2B7FE1;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
}

/* 购物车列表样式 */
.cart-list {
  background: #fff;
  margin-bottom: 20rpx;
}

.cart-item {
  display: flex;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
}

.checkbox {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.item-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.item-info {
  flex: 1;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.item-spec {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.item-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-price {
  color: #FF4D4F;
  font-size: 32rpx;
  font-weight: bold;
}

.quantity-control {
  display: flex;
  align-items: center;
  border: 1rpx solid #eee;
  border-radius: 4rpx;
}

.quantity-control text {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
}

.quantity-control input {
  width: 80rpx;
  height: 60rpx;
  text-align: center;
  border-left: 1rpx solid #eee;
  border-right: 1rpx solid #eee;
}

.delete-btn {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}

.delete-btn image {
  width: 40rpx;
  height: 40rpx;
}

/* 推荐商品样式 */
.recommend-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 100rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.recommend-scroll {
  white-space: nowrap;
}

.recommend-item {
  display: inline-block;
  width: 200rpx;
  margin-right: 20rpx;
}

.recommend-item image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
}

.recommend-info {
  padding: 10rpx 0;
}

.recommend-name {
  font-size: 24rpx;
  color: #333;
  display: block;
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.recommend-price {
  font-size: 28rpx;
  color: #FF4D4F;
  font-weight: bold;
}

/* 底部结算栏样式 */
.settlement-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.select-all {
  display: flex;
  align-items: center;
}

.select-all text {
  font-size: 28rpx;
  margin-left: 10rpx;
}

.total-info {
  flex: 1;
  margin-left: 30rpx;
}

.total-price {
  font-size: 28rpx;
}

.price {
  color: #FF4D4F;
  font-weight: bold;
}

.discount-tip {
  font-size: 24rpx;
  color: #999;
}

.checkout-btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 55rpx;
  background: #2B7FE1;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  margin-left: 30rpx;
} 